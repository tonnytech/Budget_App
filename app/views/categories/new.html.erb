<div>
  <%= form_with model: @category, url: categories_path, class:'' do |form| %>
    <div class="">
          <div class=" ">
            <%= form.text_field :name, placeholder: "New Category", class: '' , required: true%>
            <%= form.select :icon, options_for_select(@choices, selected: @category.icon), { prompt: "Select the icon" }, class: "" , required: true %>
          </div>
    </div>
    <%= form.submit "Save", class: ''%>
  <% end %>
</div>