<section class='mainCover'>
<section class='mainCoverTwo'>
<section class='header'>
    <div class='headerOne'>
      <div>H</div>
      <div>Register</div>
      <div>Next</div>
    </div>
  </section>
<div class="mainContainer">
  <section class='formCover'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <div class="formContainer">
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "formInput" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "formInput" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", class: "formInput" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "formInput" %>
    <div class='submitContainer'>
      <%= f.submit "Sign up", class: 'formSubmit' %>
    </div>
    </div>
    </div>
  <% end %>
  </section>

  <%= render "devise/shared/links" %>
</div>
</section>
</section>
