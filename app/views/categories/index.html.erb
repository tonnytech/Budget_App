<section class='mainCover'>
  <div class="mainContainer">
  <section class='header'>
    <div class='headerOne'>
      <div>H</div>
      <div>Transactions</div>
      <div>S</div>
    </div>
    <div class="headerTwo">
      <div>Most Recent</div>
      <div>Most ancient</div>
    </div>
  </section>

  <section class="cartListCover">
          <% if @categories.empty?%>
            <p class=" ">You don't have any categories yet !!</p>
          <% else %>
            <ul class="cartListContainer">
              <% @categories.each do |cat| %>
                  <%= link_to category_spendings_path(category_id: cat.id), class:'' do %>
                      <li class="cartList">
                          <div class=" "><%= cat.icon %></div>
                          <div class=" "><%= cat.name %></div>
                          <div class=" ">$ <%= cat.spendings.sum(:amount)%>
                      </li>
                  <% end %>
              <% end %>
            </ul>
          <% end %>
  </section>
  <div class='categoryButton'><%= link_to 'Create New Category', new_category_path, class: '' %>
  </div>
</div>
</section>